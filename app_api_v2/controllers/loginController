/* jshint node: true */
/* jshint esversion: 6 */

"use strict";

function isLoggedIn(req, res) {
    return !!req.session;
}

function logout(req, res) {
    winston.info('loginController: clearing session')
    req.session = nothing;
    return res.status(200);
}

function login(req, res) {
    winston.info('loginController: setting session')
    req.session = req.username;
    return res.status(200);
}
